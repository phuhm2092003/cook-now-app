<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cooknowapp"
        tools:targetApi="31" >
        <activity
            android:theme="@style/Theme.FoodRecipeDetail"
            android:name=".view.foodrecipe.FoodRecipeDetailActivity"
            android:exported="false" />
        <activity
            android:name=".view.foodrecipe.FoodRecipesActivity"
            android:exported="false"
            android:theme="@style/Theme.FoodList" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.MainScreen" />
        <activity
            android:name=".view.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.SplashScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>